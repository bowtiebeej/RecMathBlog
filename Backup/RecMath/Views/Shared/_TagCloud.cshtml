@model IList<RecMath.Core.Objects.Tag>


<div class="tag-cloud sidebar">
    <h3>Tag Cloud</h3>

    @if (Model.Count > 0)
    {
        foreach (var tag in Model)
        {
            <style>font-size: ((@RecMath.Core.BlogRepository.TotalPostsForTag(tag.ToString())) + 10)</style>
            @Html.TagLink(tag)
            
        }
    }
    else
    {
        <p>No tags found!</p>
    }
</div>