@model IList<RecMath.Core.Objects.Tag>


<div class="tag-cloud sidebar">
    <h3>Tag Cloud</h3>

    @if (Model.Count > 0)
    {
        foreach (var tag in Model)
        {
            <style>
                font-size: (@Model.Count * 5)
            @Html.TagLink(tag)
            </style>
        }
    }
    else
    {
        <p>No tags found!</p>
    }
</div>